{
  "name": "shopbebin",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "watch-css": "npx tailwindcss -i ./public/css/index.css -o ./public/dist/output.css --watch",
    "nodemon-view:brave": "nodemon --exec \"osascript tools/refresh-brave.scpt\" -e ejs",
    "nodemon-view:chrome": "nodemon --exec \"osascript tools/refresh-chrome.scpt\" -e ejs",
    "nodemon-code:brave": "nodemon --exec \"node tools/build.js && node public/dist/bundle.js\" -e ts",
    "nodemon-code:chrome": "nodemon --exec \"node tools/build.js && node public/dist/bundle.js\" -e ts",
    "dev:brave": "concurrently \"pnpm watch-css\" \"pnpm nodemon-view:brave\" \"pnpm nodemon-code:brave\" \"pnpm start\"",
    "dev:chrome": "concurrently \"pnpm watch-css\" \"pnpm nodemon-view:chrome\" \"pnpm nodemon-code:chrome\" \"pnpm start\"",
    "build": "node tools/build.js",
    "start": "node public/dist/bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.34.0",
    "tcp-port-used": "^1.0.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.20",
    "@types/tcp-port-used": "^1.0.4",
    "concurrently": "^8.2.2",
    "esbuild": "0.19.5",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  }
}